<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/error_notification_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="4dp">

    <!-- Error Icon -->
    <ImageView
        android:id="@+id/iv_error_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_warning"
        android:contentDescription="@string/error_icon" />

    <!-- Error Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Error Title -->
        <TextView
            android:id="@+id/tv_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warning_title"
            android:textColor="@color/warning_yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/error_message"
            android:textColor="@color/error_message_color"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular" />

    </LinearLayout>

    <!-- Close Button -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp">

        <!-- Grey ellipse background -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grey_ellipse" />

        <!-- Close icon centered on the ellipse -->
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/close_button" />
    </FrameLayout>

</LinearLayout>