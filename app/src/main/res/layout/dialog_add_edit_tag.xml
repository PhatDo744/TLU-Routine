<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeColor="#E5E7EB"
    app:strokeWidth="1.5dp"
    android:layout_margin="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dialog_create_tag_title"
                android:textColor="#374151"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Tên thẻ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tag_name_required_label"
                android:textStyle="bold"
                android:textColor="#374151" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:boxStrokeColor="#3B82F6"
                app:hintTextColor="#3B82F6"
                app:cursorColor="#3B82F6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tag_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#4B5563" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Màu sắc có sẵn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tag_color_optional_label"
                android:textStyle="bold"
                android:textColor="#374151" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_colors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:chipSpacingVertical="8dp"
                app:singleSelection="true"
                android:background="@color/white"/>

            <!-- Custom Color Trigger Layout -->
            <LinearLayout
                android:id="@+id/custom_color_trigger_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_color_label"
                    android:textStyle="bold"
                    android:textColor="#374151" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/custom_color_preview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/divider_color"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white"
                    tools:cardBackgroundColor="@color/material_grey_600" />
            </LinearLayout>

            <!-- Custom Color Picker Card (initially gone) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/custom_color_picker_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/divider_color"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#F9FAFB"
                    android:strokeColor="#E5E7EB">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_custom_color_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#374151"/>

                    <com.skydoves.colorpickerview.ColorPickerView
                        android:id="@+id/color_picker_view"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="12dp"/>

                    <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
                        android:id="@+id/brightness_slider"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="12dp"
                        app:selector_BrightnessSlider="@drawable/colorpickerview_wheel"
                        app:borderColor_BrightnessSlider="@android:color/darker_gray"
                        app:borderSize_BrightnessSlider="5"/>

                    <LinearLayout
                        android:id="@+id/hex_display_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/hex_display_background"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_custom_color_hex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="#3B82F6"
                            tools:textColor="@color/white"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_custom_color"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="6dp"
                            android:text="@string/select_button"
                            app:backgroundTint="@color/tag_button_blue"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_cancel_custom_color"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="@string/cancel_button"
                            app:cornerRadius="6dp"
                            android:textColor="#374151"
                            app:strokeColor="#D1D5DB"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tag_icon_optional_label"
                android:textStyle="bold"
                android:textColor="#374151" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:chipSpacingHorizontal="4dp"
                app:chipSpacingVertical="8dp"
                app:singleSelection="true"
                android:background="@color/white"/>

            <!-- Custom Icon Section in one line -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_icon_label"
                    android:textStyle="bold"
                    android:textColor="#374151" />

                <LinearLayout
                    android:id="@+id/custom_icon_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal" />

            </LinearLayout>


            <!-- Nút hành động chính -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="12dp"
                android:text="@string/save_tag_button"
                app:backgroundTint="@color/tag_button_blue"
                app:cornerRadius="12dp"
                android:textColor="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingVertical="12dp"
                android:text="@string/cancel_button"
                android:textColor="@color/material_grey_600"
                app:strokeColor="@color/divider_color"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/light_gray_background" />

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>
