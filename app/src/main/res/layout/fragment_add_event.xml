<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_event"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:title="Thêm sự kiện"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/black"
        android:elevation="0dp" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

            <!-- Tên sự kiện -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sự kiện"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E5E7EB"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@android:color/white"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập tên sự kiện"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA3AF"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Row cho Thời gian bắt đầu và kết thúc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Thời gian bắt đầu -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian bắt đầu"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/outlined_input_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="--:--"
                        android:textSize="16sp"
                        android:textColor="#9CA3AF"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Thời gian kết thúc -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian kết thúc"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/outlined_input_background"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="--:--"
                        android:textSize="16sp"
                        android:textColor="#9CA3AF"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Thời gian kéo dài -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian kéo dài"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E5E7EB"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@android:color/white"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập thời lượng sự kiện"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA3AF"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ngày -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_selected_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/outlined_input_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:text="Chọn ngày"
                android:textSize="16sp"
                android:textColor="#9CA3AF"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="12dp" />

            <!-- Chip Group cho loại lặp lại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/chip_group_background"
                android:padding="4dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_once"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:text="Chỉ 1 lần"
                    android:textColor="#3B82F6"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:checked="true"
                    app:chipBackgroundColor="#E0F2FE"
                    app:chipStrokeColor="#3B82F6"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="12dp"
                    app:chipEndPadding="12dp"
                    app:chipIcon="@null"
                    app:checkedIcon="@null"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="6dp"
                    android:text="Hằng ngày"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    app:chipBackgroundColor="#DBE5F5"
                    app:chipStrokeColor="#E5E7EB"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="12dp"
                    app:chipEndPadding="12dp"
                    app:chipIcon="@null"
                    app:checkedIcon="@null"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_selected_days"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Ngày đã chọn"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    app:chipBackgroundColor="#DBE5F5"
                    app:chipStrokeColor="#E5E7EB"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="20dp"
                    app:chipMinHeight="40dp"
                    app:chipStartPadding="12dp"
                    app:chipEndPadding="12dp"
                    app:chipIcon="@null"
                    app:checkedIcon="@null"
                    style="@style/Widget.Material3.Chip.Filter" />

            </LinearLayout>

            <!-- Hidden ChipGroup for maintaining selection logic -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_repeat_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:singleSelection="true"
                app:selectionRequired="true" />



            <!-- Row cho Bật thông báo và Chọn thẻ sự kiện -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
                android:gravity="center_vertical">

                <!-- Checkbox Bật thông báo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/cb_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bật thông báo"
                        android:textSize="15sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Button Chọn thẻ sự kiện -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_tag"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Chọn thẻ sự kiện"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    app:backgroundTint="#DBE5F5"
                    app:cornerRadius="14dp"
                    app:strokeColor="#E5E7EB"
                    app:strokeWidth="1dp"
                    android:paddingVertical="0dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Vị trí -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#E5E7EB"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@android:color/white"
                app:hintEnabled="false"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập địa điểm sự kiện"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="#9CA3AF"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="70dp">

                <!-- Button Lưu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="90dp"
                    android:layout_marginEnd="12dp"
                    android:text="Lưu"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:backgroundTint="#3B82F6"
                    app:cornerRadius="20dp"
                    app:elevation="0dp" />

                <!-- Button Hủy -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minWidth="90dp"
                    android:text="Hủy"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:letterSpacing="0"
                    app:backgroundTint="#F3F4F6"
                    app:cornerRadius="20dp"
                    app:strokeWidth="0dp"
                    app:elevation="0dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
