<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header với back button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bộ lọc tìm kiếm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Thể sự kiện lọc -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể sự kiện lọc:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Học tập - Selected -->
    <LinearLayout
        android:id="@+id/layout_hoc_tap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item_selected"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_book"
            android:layout_marginEnd="12dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Học tập"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Lái xe -->
    <LinearLayout
        android:id="@+id/layout_lai_xe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_car"
            android:layout_marginEnd="12dp"
            app:tint="@color/gray_600" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lái xe"
            android:textSize="16sp"
            android:textColor="@color/gray_800" />

    </LinearLayout>

    <!-- Thư giãn -->
    <LinearLayout
        android:id="@+id/layout_thu_gian"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_music"
            android:layout_marginEnd="12dp"
            app:tint="@color/gray_600" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thư giãn"
            android:textSize="16sp"
            android:textColor="@color/gray_800" />

    </LinearLayout>

    <!-- Thể dục -->
    <LinearLayout
        android:id="@+id/layout_the_duc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fitness"
            android:layout_marginEnd="12dp"
            app:tint="@color/gray_600" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thể dục"
            android:textSize="16sp"
            android:textColor="@color/gray_800" />

    </LinearLayout>

    <!-- Giao tiếp -->
    <LinearLayout
        android:id="@+id/layout_giao_tiep"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chat"
            android:layout_marginEnd="12dp"
            app:tint="@color/gray_600" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giao tiếp"
            android:textSize="16sp"
            android:textColor="@color/gray_800" />

    </LinearLayout>

    <!-- Ngoại ngữ -->
    <LinearLayout
        android:id="@+id/layout_ngoai_ngu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_filter_item"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_language"
            android:layout_marginEnd="12dp"
            app:tint="@color/gray_600" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngoại ngữ"
            android:textSize="16sp"
            android:textColor="@color/gray_800" />

    </LinearLayout>

    <!-- Điều kiện lọc -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều kiện lọc:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Checkbox lọc công việc chưa hoàn thành -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lọc các công việc chưa hoàn thành:"
            android:textSize="14sp"
            android:textColor="@color/gray_800" />

        <CheckBox
            android:id="@+id/checkbox_chua_hoan_thanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue_500"
            android:checked="true"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Spacer để đẩy button xuống dưới -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button Lọc -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Lọc"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_blue"
            android:layout_gravity="end"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />
    </FrameLayout>

</LinearLayout>