<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_round"
    android:padding="0dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn thời gian nhắc nhở"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/tvDialogDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn khoảng thời gian trước sự kiện để nhận thông báo"
        android:textColor="#888"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <RadioGroup
        android:id="@+id/rgReminderOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <RadioButton
            android:id="@+id/rb5min"
            style="@style/CustomRadioButton"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:text="5 phút trước"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rb15min"
            style="@style/CustomRadioButton"
            android:layout_marginBottom="8dp"
            android:text="15 phút trước"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rb30min"
            style="@style/CustomRadioButton"
            android:layout_marginBottom="8dp"
            android:text="30 phút trước"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/rb1hour"
            style="@style/CustomRadioButton"
            android:text="1 giờ trước"
            android:textAlignment="center" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            style="@style/DialogBlueButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="16dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/DialogOutlineButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Hủy"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout> 