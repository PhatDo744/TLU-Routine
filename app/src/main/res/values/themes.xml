<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TLURoutine" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TLURoutine" parent="Base.Theme.TLURoutine" />

    <!-- FAB Shape -->
    <style name="ShapeAppearanceOverlay.App.FloatingActionButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom MaterialDatePicker Theme -->
    <style name="CustomDatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <!-- Nền màu trắng -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Màu selection khi chọn ngày - #3B82F6 -->
        <item name="colorPrimary">#6366F1</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">#6366F1</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Dialog background -->
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
        
        <!-- Header text style -->
        <item name="materialCalendarHeaderTitle">@style/CustomHeaderTitle</item>
        
        <!-- Custom button style -->
        <item name="materialButtonStyle">@style/CustomDialogButton</item>
        
        <!-- Shape -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        
        <!-- Ẩn các nút để chỉ click outside -->
        <item name="materialCalendarFullscreenTheme">@style/CustomFullscreenCalendarTheme</item>
    </style>

    <!-- Custom Calendar Style -->
    <style name="CustomCalendarStyle" parent="Widget.Material3.MaterialCalendar">
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Custom Dialog Button Style -->
    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">#3B82F6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom Fullscreen Calendar Theme -->
    <style name="CustomFullscreenCalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar.Fullscreen">
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorPrimary">#3B82F6</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <!-- Custom Rounded Dialog Theme -->
    <style name="CustomRoundedDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    
    <!-- Custom Header Title for Date Picker -->
    <style name="CustomHeaderTitle" parent="Widget.Material3.MaterialCalendar.HeaderTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Shape for rounded corners -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>