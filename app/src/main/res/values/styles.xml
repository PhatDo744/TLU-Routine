<resources>
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_radio_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/radio_text_selector</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="DialogBlueButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">#2979FF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DialogOutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">#2979FF</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">#2979FF</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources> 